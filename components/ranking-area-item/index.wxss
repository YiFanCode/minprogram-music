/* components/ranking-area-item/index.wxss */
.ranking-item{
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 22rpx;
  overflow: hidden;
}

.content{
  padding: 24rpx;
  flex: 1;
  overflow: hidden;
}

.content-title{
  font-size: 34rpx;
}

.content-list{
  font-size: 28rpx;
  width: 100%;
  margin-top: 6rpx;
}
.content-list-item{
  color: #333;
  margin-top: 6rpx;
  width: 100%;
  display: inline-block;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  text-emphasis: none;
}

.content-list-item .singer {
  color: #999;
}

.album {
  position: relative;
  width: 200rpx;
  display: flex;
}

.album .image{
  width: 100%;
  height: 100%;
  display: block;
}

.album .play-counter{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  border-radius: 0 0 12rpx 0;
  color: #fff;
  font-size: 22rpx;
  text-align: right;
  padding: 6rpx 15rpx;
  background-color: rgb(0, 0, 0, .3);
  backdrop-filter: blur(10px);
  -moz-backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
}