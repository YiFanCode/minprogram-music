/* components/song-detail-header/index.wxss */
.header{
  width: 100vw;
  position: relative;
  left: -22rpx;
  display: flex;
  flex-direction: column;
  height: 450rpx;
  color: #fff;
}

.header .bg-image{
  position: absolute;
  z-index: -1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.content{
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  padding: 60rpx 50rpx;
  background-color: rgba(0, 0, 0, .5);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(15px);
  -moz-backdrop-filter: blur(15px);
}

.content .author-info{
  display: flex;
}
.author-info .image{
  width: 220rpx;
  height: 220rpx;
  border-radius: 16rpx;
}

.author-info .info{
  position: relative;
  height: 220rpx;
  flex: 1;
  margin-left: 50rpx;
}

.info .author{
  margin-top: 20rpx;
  display: flex;
  align-items: center;
}

.info .author .avatar{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}

.info .author .nickname{
  font-size: 24rpx;
  margin-left: 18rpx;
}

.info .desc{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  margin-top: 30rpx;
  font-size: 24rpx;
  display: inline-block;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.operation{
  display: flex;
  justify-content: space-around;
  padding: 30rpx;
  margin-top: 30rpx;
}
.operation .item{
  display: inline-flex;
  align-items: center;
}

.operation .item .icon{
  width: 48rpx;
  margin-right: 10rpx;
}

.operation .item .text{
  font-size: 28rpx;
}