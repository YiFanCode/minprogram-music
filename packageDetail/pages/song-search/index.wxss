/* pages/song-search/index.wxss */
page{
  background-color: #f1f2f6;
  padding: 0 22rpx;
}
/* 热门搜索 */
.header-title{
  font-weight: normal !important;
}

.hot{
  padding: 0 10rpx;
}

.hot .keywords{
  padding: 0 8rpx;
  display: flex;
  flex-wrap: wrap;
}
.hot .tag{
  font-size: 26rpx;
  background: #fff;
  color: #666;
  padding: 10rpx 12rpx;
  border-radius: 16rpx;
  margin: 20rpx 20rpx 0 0;
}
.hot .tag:first-of-type{
  color: #26ce8a;
}

/* 历史搜索 */
.history{
  margin-bottom: 25rpx;
}
.history .tag:first-of-type{
  color: #666;
}

/* 搜索建议 */
.suggest{
  padding: 20rpx;
  background: #fff;
  border-radius: 12rpx;
}

.suggest .title{
  color: #26ce8a;
  font-size: 34rpx;
  font-weight: 700;
}

.list .item{
  display: flex;
  align-items: center;
  margin-top: 16rpx;
}

.list .item .icon{
  width: 60rpx;
  flex-shrink: 0;
  margin-left: -10rpx;
}

.list .item .text{
  font-size: 28rpx;
  color: #666;
}

/* 搜索结果 */
.result{
  height: calc(100vh - 54px);
}

.result .scroll-view{
  height: 100%;
}

.result .title{
  font-size: 32rpx;
  color: #26ce8a;
}
.result .list{
  padding-bottom: 22rpx;
}

.loading{
  padding: 22rpx 0 44rpx 0;
}

.more{
  color: #666;
  font-size: 26rpx;
  text-align: center;
  padding: 22rpx 0;
}