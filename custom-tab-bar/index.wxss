/* custom-tab-bar/index.wxss */
.tab-bar{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 48px;
  background: #fff;
  display: flex;
  padding-bottom: evn(safe-area-inset-bottom);
}

.tab-bar-border{
  background-color: rgba(0, 0, 0, 0.33);
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1px;
  transform: scaleY(0.5);
}

.tab-bar-item{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.tab-bar-item .image {
  width: 58rpx;
  height: 58rpx;
}

.tab-bar-item .text {
  font-size: 30rpx;
  color: #a2a2a2;
}

.tab-bar-item .text.active {
  color: #26ce8a;
}